<Sysmon schemaversion="4.30">
	<EventFiltering>
		<RuleGroup name="" groupRelation="or">
			<FileCreate onmatch="include">
				<Rule name="technique_id=T1003.001,technique_name=OS Credential Dumping: LSASS Memory" groupRelation="and">
					<TargetFilename condition="contains">\*lsass*.dmp\</TargetFilename>				<!-- Capture LSASS dump from task manager -->
					<Image condition="image">taskmgr.exe</Image>
				</Rule>
			</FileCreate>
		</RuleGroup>
	</EventFiltering>
</Sysmon>